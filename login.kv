Screen:
    MDCard:
        size_hint : None, None
        size : 300, 400
        pos_hint : {"center_x" : 0.5, "center_y" : 0.5}
        elevation : 10
        padding : 25
        spacing : 25
        orientation : 'vertical'

        MDLabel:
            id : title
            text : "School For All"
            font_size : 30
            halign : 'center'
            size_hint_y : None
            height : self.texture_size[1]
            padding_y : 15

        MDTextField:
            id : user
            hint_text : "username"
            icon_right : "account"
            size_hint_x : None
            width : 200
            font_size : 18
            pos_hint : {"center_x": 0.5}

        MDTextField:
            id : password
            hint_text : "password"
            icon_right : "eye-off"
            password : True
            size_hint_x : None
            width : 200
            font_size : 18
            pos_hint : {"center_x": 0.5}

        MDRectangleFlatButton:
            text : "Log In"
            size_hint_x : None
            width : 200
            font_size: 12
            pos_hint : {"center_x": 0.5}
            on_press : app.logger()

        MDRectangleFlatButton:
            text : "Clean"
            size_hint_x : None
            width : 200
            font_size: 12
            pos_hint : {"center_x": 0.5}
            on_press : app.clear()

        MDLabel:
            id : error
            text : ""
            font_size : 12
            halign : 'center'
            padding_y : 15
